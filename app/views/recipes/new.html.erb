<div class="flex flex-col items-center mt-14">
  <h1 class="text-2xl font-bold mb-8">New Recipe</h1>

  <%= form_with(model: @recipe, url: recipes_path, local: true, class: "w-full max-w-sm") do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block font-bold mb-2" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :cooking_time, class: "block font-bold mb-2" %>
      <%= form.text_field :cooking_time, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :preparation_time, class: "block font-bold mb-2" %>
      <%= form.text_field :preparation_time, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-300" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block font-bold mb-2" %>
      <%= form.text_field :description, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-300" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Create Recipe", class: " w-full px-4 py-2 bg-[#81bab4] text-white font-semibold rounded-md shadow-md focus:outline-none focus:ring focus:ring-blue-300 cursor-pointer" %>
    </div>
  <% end %>
</div>
