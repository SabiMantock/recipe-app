<h1>Recipes</h1>

<% if @recipes.any? %>
  <ul>
    <% @recipes.each do |recipe| %>
      <li><%= link_to recipe.name, recipe_path(recipe.id) %></li>
      <p>Description: <%= recipe.description %></p>
      
      <% if current_user == recipe.user %>
        <%= link_to 'Delete Recipe', recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } %>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p>No recipes found.</p>
<% end %>

<%= link_to 'Create New Recipe', new_recipe_path %>
