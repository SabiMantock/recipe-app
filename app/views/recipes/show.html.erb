<main class="recipe-container">
  <h3 class="recipe-name"><%= @recipe.name %></h3>

  <section>
    <div class="description-container">
      <div class="recipe_detail_container">
        <p> Preparation Time: <%= @recipe.preparation_time %> hour </p>
        <p> Cooking Time: <%= @recipe.cooking_time %> hour </p>
        <p> <%= @recipe.description %> </p>
      </div>
    <div>
  </section>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.recipe_foods.each do |recipe_food| %>
        <% food = recipe_food.food %>
        <tr>
          <td><%= food.name %></td>
          <td><%= recipe_food.quantity %> <%= food.measurement_unit %></td>
          <td> $<%= food.price * recipe_food.quantity %></td>
          <td>
            <% if can?(:update, recipe_food) %>
              <%= link_to 'Modify', '#' %>
            <% end %> 
            <% if can?(:delete, recipe_food) %>
              <%= button_to 'Delete', recipe_recipe_food_path(@recipe, recipe_food), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' } %>
            <% end %>  
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>