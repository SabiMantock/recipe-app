
<div class="flex flex-col items-center mt-14">
  <h2 class="mb-14 text-2xl ">LOGIN</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field w-full mb-5">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "w-full shadow-md rounded-md outline-none ", placeholder: 'Enter Email' %>
  </div>

  <div class="field w-full mb-5">
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full shadow-md rounded-md outline-none", placeholder: 'Enter Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex items-center gap-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions w-full mt-5">
    <%= f.submit "Log in", class: "w-full bg-[#81bab4] py-2 rounded-md text-white shadow-md cursor-pointer" %>
  </div>
<%= render "devise/shared/links" %>
<% end %>

  </div>

