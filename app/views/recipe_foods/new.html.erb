<h2>Add New Ingredient</h2>

<%= form_with(model: [@recipe, @recipe_food], local: true) do |form| %>
  <div class="field">
    <%= form.label :food_id, 'Food' %>
    <%= form.collection_select :food_id, @foods, :id, :name, prompt: 'Select food item' %>
  </div>

  <div class="field">
    <%= form.label :quantity, 'Quantity' %>
    <%= form.number_field :quantity %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Ingredient' %>
    <%= link_to 'Cancel', recipe_path(@recipe), class: 'button' %>
  </div>
<% end %>

