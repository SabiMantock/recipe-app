<div class="flex flex-col items-center mt-8  sm:w-4/5 mx-auto">
  <h1 class="text-2xl  font-bold mb-6">Food List</h1>
  <%= link_to 'Add New Food', new_food_path, class: "py-2 px-3 border border-[#81bab4] self-end rounded-md" %>
  <% if @foods.empty? %>
    <p class="mt-5">No foods added.</p>
  <% else %>
    <div class="overflow-x-auto w-full mt-8">
      <table class="w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="py-3 px-6 text-left bg-gray-50 font-bold text-gray-500">
              Name
            </th>
            <th class="py-3 px-6 text-left bg-gray-50 font-bold text-gray-500">
              Measurement Unit
            </th>
            <th class="py-3 px-6 text-left bg-gray-50 font-bold text-gray-500">
              Unit Price
            </th>
            <th class="py-3 px-6 text-left bg-gray-50 font-bold text-gray-500">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @foods.each do |food| %>
            <tr>
              <td class="py-3 px-6 whitespace-nowrap">
                <%= food.name %>
              </td>
              <td class="py-3 px-6 whitespace-nowrap">
                <%= food.measurement_unit %>
              </td>
              <td class="py-3 px-6 whitespace-nowrap">
                <%= food.price %>
              </td>
              <td class="py-3 px-6 whitespace-nowrap">
                <% if current_user == food.user %>
                  <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: 'Are you sure you want to delete this food?' }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
